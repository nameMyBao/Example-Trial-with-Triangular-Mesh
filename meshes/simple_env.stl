solid simple_env
  # Floor (two triangles)
  facet normal 0 0 1
    outer loop
      vertex 0 0 0
      vertex 1 0 0
      vertex 1 1 0
    endloop
  endfacet
  facet normal 0 0 1
    outer loop
      vertex 0 0 0
      vertex 1 1 0
      vertex 0 1 0
    endloop
  endfacet

  # Ramp (two triangles)
  facet normal 0.4472 0.0 0.8944
    outer loop
      vertex 0 0 0
      vertex 1 0 0
      vertex 1 0.5 0.5
    endloop
  endfacet
  facet normal 0.0 0.4472 0.8944
    outer loop
      vertex 1 0 0
      vertex 1 1 0
      vertex 1 0.5 0.5
    endloop
  endfacet
endsolid simple_env
